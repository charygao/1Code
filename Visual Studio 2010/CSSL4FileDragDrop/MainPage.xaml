<UserControl x:Class="CSSL4FileDragDrop.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="640" Height="480">
    <Border CornerRadius="10" Background="AliceBlue" Margin="10" BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <TextBlock Text="Drop Image files here" Foreground="#FF0074CE"  FontStyle="Italic"  FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Canvas x:Name="LayoutRoot" Background="Transparent" AllowDrop="True" Drop="LayoutRoot_Drop" />
        </Grid>
    </Border>
</UserControl>
