<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://schemas.microsoft.com/windows/2009/Ribbon">
	<Application.Commands>
		<Command Name="cmdHome" Symbol="cmdHome" LabelTitle="Home"/>
    <Command Name="cmdOpenImage" Symbol="cmdOpenImage" LabelTitle="Open Image"/>
    <Command Name="cmdFile" Symbol="cmdFile" LabelTitle="cmdFile"/>
    <Command Name="cmdMouseSimulation" Symbol="cmdMouseSimulation" LabelTitle="Mouse Simulation"/>
		<Command Name="cmdTranslateLeft" Symbol="cmdTranslateLeft" LabelTitle="Translate Left 100 pixels"/>
		<Command Name="cmdTranslateRight" Symbol="cmdTranslateRight" LabelTitle="Translate Right 100 pixels"/>
		<Command Name="cmdTranslateUp" Symbol="cmdTranslateUp" LabelTitle="Translate Up 100 pixels"/>
		<Command Name="cmdTranslateDown" Symbol="cmdTranslateDown" LabelTitle="Translate Down 100 pixels"/>
		<Command Name="cmdScaleDown" Symbol="cmdScaleDown" LabelTitle="Scale Down 10%"/>
		<Command Name="cmdScaleUp" Symbol="cmdScaleUp" LabelTitle="Scale Up 10%"/>
		<Command Name="cmdRotateLeft" Symbol="cmdRotateLeft" LabelTitle="Rotate Left 90"/>
		<Command Name="cmdRotateRight" Symbol="cmdRotateRight" LabelTitle="Rotate Right"/>
	</Application.Commands>
	<Application.Views>
		<Ribbon>
			<Ribbon.Tabs>
				<Tab CommandName="cmdHome">
          <Group CommandName="cmdFile" SizeDefinition="OneButton">
            <Button CommandName="cmdOpenImage"/>
          </Group>
					<Group CommandName="cmdMouseSimulation" SizeDefinition="EightButtons">
						<Button CommandName="cmdTranslateLeft"/>
						<Button CommandName="cmdTranslateRight"/>
						<Button CommandName="cmdTranslateUp"/>
						<Button CommandName="cmdTranslateDown"/>
						<Button CommandName="cmdScaleDown"/>
						<Button CommandName="cmdScaleUp"/>
						<Button CommandName="cmdRotateLeft"/>
						<Button CommandName="cmdRotateRight"/>
					</Group>
				</Tab>
			</Ribbon.Tabs>
		</Ribbon>		
	</Application.Views>
</Application>