<UserControl xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="VBSL4DataFormCancelButton.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <ScrollViewer>
            <toolkit:DataForm x:Name="myDataForm" CancelButtonContent="Cancel Edit" CommandButtonsVisibility="All" Width="400" Height="300" Header="Show Cancel Button Sample"/>
        </ScrollViewer>
    </Grid>
</UserControl>
